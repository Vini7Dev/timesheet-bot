    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@types/chromedriver": "^81.0.1",
    "@types/jest": "^29.1.2",
    "@types/jsonwebtoken": "^8.5.9",
